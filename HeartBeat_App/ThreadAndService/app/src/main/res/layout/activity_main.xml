<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.blog.vhehvkd.threadandservice.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartBackground"
        android:id="@+id/btn_runBack"
        android:layout_below="@+id/btn_trans"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn_trans"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trans"
        android:id="@+id/btn_trans"
        android:layout_below="@+id/txtValue"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBtName"
        android:hint="BluetoothName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_connect"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtValue"
        android:layout_below="@+id/txtBtName"
        android:layout_alignParentStart="true"
        android:hint="Data"
        android:layout_alignEnd="@+id/btn_trans"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/btn_connect"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtStatus"
        android:layout_below="@+id/btn_runBack"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn_runBack"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
