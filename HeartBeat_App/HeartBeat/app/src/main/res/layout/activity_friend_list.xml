<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comjungwon7769heartbeat.github.heartbeat.FriendListActivity"
    android:background="@color/colorIvory">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frList_myDetailLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/frList_myMode"
            android:src="@drawable/annoy"
            android:layout_gravity="center_vertical"
            android:background="#ffb9b9"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="안현정"
            android:id="@+id/frList_myNick"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/frList_myMode"
            android:layout_marginStart="20dp"/>

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorOrange"
        android:dividerHeight="@dimen/frList_listDivider"
        android:id="@+id/frList_list"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frList_myDetailLayout"
        android:layout_above="@+id/frList_buttonLayout"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frList_buttonLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/frList_btnAlarm"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_send"
            android:background="@android:drawable/progress_horizontal"
            android:layout_marginRight="5dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/frList_btnAddFriend"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_myplaces"
            android:background="@android:drawable/progress_horizontal"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</RelativeLayout>
