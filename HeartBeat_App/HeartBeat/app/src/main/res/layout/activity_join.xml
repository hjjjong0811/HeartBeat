<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aurora"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comjungwon7769heartbeat.github.heartbeat.JoinActivity">

    <TextView
        android:id="@+id/join_txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="62dp"
        android:text="@string/joinAct_Title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorLight"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_txtTitle"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/join_txtID"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/join_txtPWD"
                android:layout_alignStart="@+id/join_txtPWD"
                android:hint="ID"
                android:text=""
                android:inputType="text"
                android:textColor="@color/colorLight"
                android:textCursorDrawable="@null"/>

            <Button
                android:id="@+id/join_btnUsable"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/join_txtID"
                android:layout_alignEnd="@+id/join_txtPWD"
                android:background="@drawable/selector_button_bgdark"
                android:text="@string/joinAct_btnUsable"
                android:textColor="@drawable/selector_button_bgdark"/>
        </LinearLayout>

        <EditText
            android:id="@+id/join_txtPWD"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/colorLight"
            android:textCursorDrawable="@null"/>

        <EditText
            android:id="@+id/join_txtNick"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="NICKNAME"
            android:text=""
            android:textColor="@color/colorLight"
            android:textCursorDrawable="@null"
            android:inputType="text"/>

        <Button
            android:id="@+id/join_btnJoin"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/join_txtNick"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_button_bgdark"
            android:padding="3dp"
            android:text="@string/joinAct_btnJoin"
            android:textColor="@drawable/selector_button_bgdark"/>
    </LinearLayout>


</RelativeLayout>
