<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/popup_msgBzz_imgMode"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:src="@drawable/smile"/>

            <TextView
                android:id="@+id/popup_msgBzz_txtNick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="sender"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorLight"/>
        </LinearLayout>

        <TextView
            android:id="@+id/popup_msgBzz_txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="time"
            android:textAlignment="center"
            android:textColor="@color/colorLight"/>

        <TextView
            android:id="@+id/popup_msgBzz_txtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/ic_bzz"
            android:gravity="center_horizontal"
            android:text="62"
            android:textColor="@color/colorLight"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/popup_msgBzz_btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_bgdark"
            android:text="@string/delete"
            android:textColor="@drawable/selector_button_bgdark"/>

    </LinearLayout>
</RelativeLayout>