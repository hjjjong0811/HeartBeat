<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:weightSum="1"
                android:gravity="bottom"
                android:padding="16dp">

    <GridView
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:id="@+id/popup_pickEmotion_grid"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/popup_pickEmotion_ok"
        android:stretchMode="columnWidth"
        android:numColumns="5"
        android:nestedScrollingEnabled="false"
        />


    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button_bgdark"
        android:text="@string/ok"
        android:id="@+id/popup_pickEmotion_ok"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/popup_pickEmotion_cancel"
        android:layout_toStartOf="@+id/popup_pickEmotion_cancel"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button_bgdark"
        android:text="@string/cancel"
        android:id="@+id/popup_pickEmotion_cancel"
        android:layout_marginEnd="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>