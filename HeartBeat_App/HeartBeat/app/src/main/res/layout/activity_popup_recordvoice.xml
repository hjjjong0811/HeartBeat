<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/popup_rv_btnRecord"
            android:layout_centerHorizontal="true"
            android:background="@drawable/record_start"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/popup_rv_btnPlay"
                android:src="@android:drawable/ic_media_play"
                android:background="#00000000"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/popup_rv_btnStop"
                android:src="@android:drawable/ic_media_pause"
                android:background="#00000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_bgdark"
                android:text="@string/trans"
                android:id="@+id/popup_rv_btnTrans"
                android:enabled="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_bgdark"
                android:text="@string/cancel"
                android:id="@+id/popup_rv_btnCancel"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>