<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comjungwon7769heartbeat.github.heartbeat.MyDetailActivity"
    android:clickable="false"
    android:contextClickable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/myDt_imgMode"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/laugh"
            android:background="#f2b8a1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="NickName"
            android:id="@+id/myDt_txtNick"
            android:layout_below="@+id/myDt_imgMode"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/myDt_menuListLayout">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/detail_Button_Size"
            android:text="@string/DetailAct_LEDColor"
            android:id="@+id/myDt_btnLEDColor"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/detail_Button_Size"
            android:text="@string/DetailAct_setMode"
            android:id="@+id/myDt_btnSetMode"
            android:layout_marginTop="1dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/detail_Button_Size"
            android:text="@string/DetailAct_transBzz"
            android:id="@+id/myDt_btnTransBzz"
            android:layout_marginTop="1dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/detail_Button_Size"
            android:text="@string/DetailAct_transVoice"
            android:id="@+id/myDt_btnTransVoice"
            android:layout_marginTop="1dp"/>
    </LinearLayout>
</RelativeLayout>
