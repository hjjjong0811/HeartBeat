<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--사용 불가 상태-->
    <item android:state_enabled="false">
        <layer-list>
            <item android:left="-5dp" android:right="-5dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/colorPrimary"></stroke>
                    <gradient android:startColor="@color/colorLight" android:centerColor="@color/colorPrimary" android:endColor="@color/colorLight"></gradient>
                </shape>
            </item>
        </layer-list>
    </item>
    <!--누른 상태-->
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="-5dp" android:right="-5dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/colorAccent"></stroke>\
                    <gradient android:startColor="@color/colorLight" android:centerColor="@color/colorAccent" android:endColor="@color/colorLight"></gradient>
                </shape>
            </item>
        </layer-list>
    </item>
    <!--대기 상태-->
    <item android:state_pressed="false">
        <layer-list>
            <item android:left="-5dp" android:right="-5dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/colorPrimaryLight"></stroke>\
                    <gradient android:startColor="@color/colorLight" android:centerColor="@color/colorPrimaryLight" android:endColor="@color/colorLight"></gradient>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>