<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--사용 불가 상태-->
    <item android:state_enabled="false" android:color="@color/colorTextAndIcon">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorDivider"></solid>
            <corners android:radius="@dimen/button_radius"></corners>
        </shape>
    </item>
    <!--누른 상태-->
    <item android:state_pressed="true" android:color="@color/colorTextAndIcon">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent"></solid>
            <corners android:radius="@dimen/button_radius"></corners>
        </shape>
    </item>
    <!--대기 상태-->
    <item android:state_pressed="false" android:color="@color/colorTextAndIcon">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"></solid>
            <corners android:radius="@dimen/button_radius"></corners>
        </shape>
    </item>
</selector>